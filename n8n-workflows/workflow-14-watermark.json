              "value": "={{ $env.API_KEY }}"
            },
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"eventType\": \"WATERMARK_UPDATED\",\n  \"documentId\": \"{{ $('Webhook - Update Watermark').item.json.body.documentId }}\",\n  \"details\": {\n    \"type\": \"{{ $('Webhook - Update Watermark').item.json.body.type }}\",\n    \"updated_at\": \"{{ new Date().toISOString() }}\"\n  }\n}",
        "options": {}
      },
      "id": "log-audit",
      "name": "HTTP - Log Audit",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [910, 200]
